<h1>Create a blog</h1>

<%= form_for @blog do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
    <%= f.submit %>
<% end %>

<% if @blog.errors.any? %>
  <h2>The following errors prevented the article from saving:</h2>
  <ul>
    <% @blog.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
